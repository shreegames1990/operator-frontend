{
  "name": "operator-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter './apps/*' dev",
    "dev:user": "bun run --filter user-frontend dev",
    "dev:admin": "bun run --filter admin-frontend dev",
    "build": "bun run --filter './apps/*' build",
    "start": "bun run --filter user-frontend start",
    "lint": "bun run --filter './apps/*' lint"
  },
  "devDependencies": {
    "typescript": "^5"
  }
}
